<Page
    x:Class="VKUI_UWP_Demo.Menu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:VKUI_UWP_Demo"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vkui="using:VK.UI.UWP.Controls"
    xmlns:vkuif="using:VK.UI.UWP.Flyouts"
    mc:Ignorable="d"
    Loaded="OnLoad">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <vkui:PageHeader Content="VKUI UWP Demo">
            <vkui:PageHeader.RightButtons>
                <vkui:PageHeaderButton ContentTemplate="{StaticResource Icon28MoreHorizontal}" Click="ShowMoreMenu">
                    <FlyoutBase.AttachedFlyout>
                        <vkuif:MenuFlyout x:Name="TestFlyout" Placement="Bottom">
                            <vkuif:MenuFlyout.Items>
                                <vkui:CellButton IconTemplate="{StaticResource Icon28LinkOutline}" Text="Link"/>
                            </vkuif:MenuFlyout.Items>
                        </vkuif:MenuFlyout>
                    </FlyoutBase.AttachedFlyout>
                </vkui:PageHeaderButton>
            </vkui:PageHeader.RightButtons>
        </vkui:PageHeader>
        <ScrollViewer Grid.Row="1" MaxWidth="576">
            <StackPanel Margin="8">
                <StackPanel x:Name="Intro" Margin="8,0" Padding="0,4,0,8" BorderBrush="{ThemeResource VKSeparatorCommonBrush}" BorderThickness="0,0,0,1">
                    <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Добро пожаловать!"/>
                    <TextBlock Margin="0,8" TextWrapping="Wrap">
                        Это приложение создано для демонстрации библиотеки VKUI на UWP. Пока не всё тут есть, т. к. сама библиотека пока что не до конца портирована.
                        <LineBreak/>
                        <Run FontWeight="SemiBold" Text="Version: "/><Run x:Name="LibVersion"/><LineBreak/>
                        <Run FontWeight="SemiBold" Text="Palette version: "/><Run Text="{StaticResource VKUIPaletteVersion}"/><LineBreak/>
                        <Run FontWeight="SemiBold" Text="Scheme version: "/><Run Text="{StaticResource VKUISchemeVersion}"/><LineBreak/>
                        <Run FontWeight="SemiBold" Text="Icons version: "/><Run Text="{StaticResource VKUIIconsVersion}"/>
                    </TextBlock>
                </StackPanel>
                <StackPanel x:Name="Basics" Margin="8,0" Padding="0,4,0,8" BorderBrush="{ThemeResource VKSeparatorCommonBrush}" BorderThickness="0,0,0,1">
                    <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Основы"/>
                    <StackPanel Margin="0,8,0,0">
                        <vkui:CellButton Padding="0" IconTemplate="{StaticResource Icon24Info}" Text="Как подключить" Tag="https://github.com/Elorucov/vkui-uwp/blob/master/README.md" Click="OpenLink" />
                        <vkui:CellButton Padding="0" IconTemplate="{StaticResource Icon24SmileOutline}" Text="Иконки" Tag="1" Click="OpenPage" />
                        <vkui:CellButton Padding="0" IconTemplate="{StaticResource Icon24Filter}" Text="Всплывающие элементы" Tag="3" Click="OpenPage" />
                    </StackPanel>
                </StackPanel>
                <StackPanel x:Name="Controls" Margin="8,0" Padding="0,4,0,8" BorderBrush="{ThemeResource VKSeparatorCommonBrush}" BorderThickness="0,0,0,1">
                    <TextBlock Style="{StaticResource TitleTextBlockStyle}" Text="Элементы управления"/>
                    <StackPanel Margin="0,8,0,0">
                        <vkui:CellButton Padding="0" IconTemplate="{StaticResource Icon24Filter}" Text="PageHeader" Tag="11" Click="OpenPage" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
