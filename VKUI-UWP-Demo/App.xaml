<Application
    x:Class="VKUI_UWP_Demo.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vkui="using:VK.UI.UWP.Controls"
    xmlns:local="using:VKUI_UWP_Demo">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///VK.UI.UWP/VKPalette.xaml"/>
                <ResourceDictionary Source="ms-appx:///VK.UI.UWP/VKScheme.xaml"/>
                <ResourceDictionary Source="ms-appx:///VK.UI.UWP/VKControlStyles.xaml"/>
                <ResourceDictionary Source="ms-appx:///VK.UI.UWP/VKIcons.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style TargetType="vkui:PageHeader">
                <Setter Property="DetectNonSafeArea" Value="true"/>
            </Style>
            <Style TargetType="Frame">
                <Setter Property="Background" Value="{ThemeResource VKBackgroundContentBrush}"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
    
</Application>
